<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style >

    <style name="title_bar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- LOGIN PAGE -->
    <style name="edt_custom">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edt_white</item>
        <item name="android:paddingTop">@dimen/txt_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/txt_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/txt_padding_left_right</item>
        <item name="android:paddingRight">@dimen/txt_padding_left_right</item>
        <item name="android:layout_marginTop">@dimen/txt_margin_top</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginLeft">@dimen/txt_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/txt_margin_left_right</item>
    </style>

    <style name="btn_custom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/custom_click_btn_login</item>
        <item name="android:paddingTop">@dimen/txt_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/txt_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/txt_padding_left_right</item>
        <item name="android:paddingRight">@dimen/txt_padding_left_right</item>
        <item name="android:layout_marginTop">@dimen/txt_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/txt_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/txt_margin_left_right</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- CHECKBOX LOGIN -->
    <style name="business_type_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/custom_cbx_business</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Address Style : Home/Custom/ProductHome/ProductDesciption-->
    <style name="customhome_product_widget">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
    </style>

    <style name="text_title">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_main</item>
    </style>

    <!-- USER -->
    <style name="choosen_user">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@drawable/custom_cick_user</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="text_user">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_login</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="img_user">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="title">
        <item name="android:title">Chi tiết sản phẩm</item>
    </style>

    <!-- Product Detail and Business detail-->
    <style name="text_detail">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="linear">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <!-- LÊ MINH TRÍ - TRANG ĐỊA ĐIỂM DOANH NGHIỆP , CHI TIẾT DOANH NGHIỆP , CÁ NHÂN , SẢN PHẨM -->
    <!-- PLACE SCREEN -->

    <!-- DETAIL PLACE -->




    <style name="frame_detail">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@android:color/white</item>
    </style>



    <style name="text_detail_personal">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="vote">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/custom_cbx_vote</item>
    </style>

    <!-- LOGIN PAGE -->





</resources>
