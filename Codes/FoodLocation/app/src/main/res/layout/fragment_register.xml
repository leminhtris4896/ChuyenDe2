<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.trile.foodlocation.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/rdg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdb_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:button="@drawable/custom_radio_button"
                    android:paddingLeft="10dp"
                    android:text="@string/cbx_register_normal"/>
                <RadioButton
                    android:id="@+id/rdb_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:button="@drawable/custom_radio_button"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="10dp"
                    android:text="@string/cbx_register_business"/>

            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/logo"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_type_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chá»§"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
