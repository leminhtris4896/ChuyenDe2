<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trile.foodlocation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fast_food"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />

        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".BusinessDetailActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".PostDetailActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".DetailPersonalActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/title_bar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddProductActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".EditProductActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".ProductManagerActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".UserAboutusActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".UpdateInforActivity"
            android:theme="@style/title_bar" />
        <activity
            android:name=".AddPost"
            android:theme="@style/title_bar" />
        <activity android:name=".ManagerPost"></activity>
    </application>

</manifest>